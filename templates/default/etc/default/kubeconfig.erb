apiVersion: v1
kind: Config
clusters:
<%
unless @clusters.nil?
  @clusters.each do |cluster| %>
- cluster:
<%  if cluster.key?('api_version') %>
    api-version: <%= cluster['api_version'] %>
<%  end
    if cluster.key?('certificate_authority') %>
    certificate-authority: <%= cluster['certificate_authority'] %>
<%  end
    if cluster.key?('server') %>
    server: <%= cluster['server'] %>
<%  end
    if cluster.key?('skip_tls_verify') %>
    insecure-skip-tls-verify: <%= cluster['skip_tls_verify'] %>
<%  end
    if cluster.key?('name') %>
  name: <%= cluster['name'] %>
<%
    end
  end
end %>
users:
<%
unless @users.nil?
  @users.each do |user| %>
- name: <%= user['name'] %>
  user:
<%  if user.key?('token') %>
    token: <%= user['token'] %>
<%  end
    if user.key?('client_certificate') %>
    client-certificate: <%= user['client_certificate'] %>
<%  end
    if user.key?('client_key') %>
    client-key: <%= user['client_key'] %>
<%  end
    if user.key?('username') %>
    username: <%= user['username'] %>
<%  end
    if user.key?('password') %>
    password: <%= user['password'] %>
<%
    end
  end
end %>
contexts:
<%
unless @contexts.nil?
  @contexts.each do |context| %>
- context:
<%  if context.key?('namespace') %>
    namespace: <%= context['namespace'] %>
<%  end
    if context.key?('cluster') %>
    cluster: <%= context['cluster'] %>
<%  end
    if context.key?('user') %>
    user: <%= context['user'] %>
<%  end
  end
end %>
current-context: <%= @current_context %>
